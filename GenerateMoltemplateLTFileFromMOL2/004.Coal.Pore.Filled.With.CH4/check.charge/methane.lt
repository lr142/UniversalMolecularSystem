#methane.lt
import "oplsaa.lt"

# relevant atom types:
# atom 83 13 CT "Methane CH4"  6 12.011 4
# atom 85 46 HC "Alkane H-C"   1 1.008  1
# OPLSAA defined C-H bond length is 1.09 Ã…

Methane inherits OPLSAA{
    write("Data Atoms"){
        # name    mol_name  atom_type charge   x     y      z
        $atom:c   $mol:.   @atom:83   0.0      0     0      0
        $atom:h1  $mol:.   @atom:85   0.0      0     0      1.09
        $atom:h2  $mol:.   @atom:85   0.0      1.02766  0   -0.36333
        $atom:h3  $mol:.   @atom:85   0.0      -0.51384 0.88998 -0.36333
        $atom:h4  $mol:.   @atom:85   0.0      -0.51384 -0.88998 -0.36333
    }
    # You only need to provide the list of bonds without specifying their types; the program will lookup the
    # OPLSAA forcefield and determine their types
    write("Data Bond List"){
        $bond:ch1  $atom:c  $atom:h1
        $bond:ch2  $atom:c  $atom:h2
        $bond:ch3  $atom:c  $atom:h3
        $bond:ch4  $atom:c  $atom:h4
    }

    # We will keep bond lengths and bond angles fixed during the simulations
    write_once("In Settings"){
    	group gCH4 type @atom:83 @atom:85
    }
}

        
        
        
